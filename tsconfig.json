{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": false,
    "strictNullChecks": false,
    "outDir": "./build/",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "__pages/*": ["./src/client/pages/*"],
      "__components/*": ["./src/client/components/*"],
      "__utils/*": ["./src/client/utils/*"],
      "__types/*": ["./src/client/types/*"],
      "__store/*": ["./src/client/store/*"],
      "__reducers*": ["./src/client/reducers/index.ts"],
      "__reducers/*": ["./src/client/reducers/*"],
      "__selectors/*": ["./src/client/selectors/*"],
      "__commonActions": ["src/client/commonActions/index.ts"],
      "__routes": ["./src/client/routes.ts"],
      "__config": ["./src/client/config.ts"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/typings/**/*.d.ts",
    "node_modules/@types",
  ],
  "compileOnSave": false,
  "exclude": ["node_modules"]
}
