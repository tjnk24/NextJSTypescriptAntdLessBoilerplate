{
  "compilerOptions": {
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": false,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "outDir": "./build/",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "__pages/*": ["./src/pages/*"],
      "__components/*": ["./src/components/*"],
      "__utils/*": ["./src/utils/*"],
      "__types/*": ["./src/types/*"],
      "__store/*": ["./src/store/*"],
      "__reducers/*": ["./src/reducers/*"],
      "__reducers": ["./src/reducers/index.ts"],
      "__selectors/*": ["./src/selectors/*"],
      "__routes": ["./src/routes.ts"],
      "__config": ["./src/config.ts"],
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "include": [
    "*.js",
    "*.*.js",
    "*.ts",
    "*.json",
    "*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/typings/**/*.d.ts",
    "node_modules/@types",
  ],
  "compileOnSave": false,
  "exclude": ["node_modules"],
}
